<div class="container d-flex flex-column flex-md-row px-2 my-2 my-md-5">
  <div class=" content col-12 col-md-7 col-lg-8 p-0 pr-md-3">
     <div class="col-12 p-0 mb-4">
      <% if @listing.picture.attached? %>
                <%= image_tag @listing.picture, class: "thumbnail card-img top" %>
           <% else %>
                <%= image_tag "noimage.jpg", alt: "noimage", class: "thubnail card-img top" %>
           <% end %>
     </div>
  </div>

     <div class="col-lg-4 p-0 mx-2 d-md-block">
       <h3 class="mb-sm-2 mb-md-2"><%= @listing.title %></h3>
       <p class="text-right">Posted by <%= link_to @listing.user.profile.firstname, @listing.user.profile, class: "link" %></p><br>
       
       <div class="text-left">
       <h5>$ <%= @listing.price %></h5>
       <h5>Quantity :  <%= @listing.quantity %> <%= @listing.measurement.name %></h5>
       <br>
       <p class="blockquote mt-2 text-left"><b>ITEM INFO</b></p>
       <%= @listing.description %>
       </div>
       
       <% if current_user && @listing.purchased == false %>
         <button data-stripe="payment" class="btn btn-lg mt-5">BUY</button>
       <% elsif current_user && @listing.purchased == true %>
         <button class= 'btn btn-lg mt-5' disabled>SOLD</button>
      <% else %>
         <%= button_to "Log in to buy", new_user_session_path, class: "btn btn-lg mt-5" %>
       <% end %>

       <div class="text-right">
         <%= link_to 'Edit', edit_listing_path(@listing), class: "link" if current_user && current_user.id == @listing.user_id %> /
         <%= link_to 'Back', listings_path, class: "link" %> /
         <%=link_to "Delete", @listing, method: :delete, data: {confirm: "Are you sure?"} , class: "mr-3 link" if current_user && current_user.id == @listing.user_id %>
                  
      </div> 
   </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script>
  const button = document.querySelector("[data-stripe='payment']");
  if (button) {
   button.addEventListener("click", () => {
      const stripe = Stripe(
         "<%= Rails.application.credentials.dig(:stripe, :public_key) %>"
      );
      stripe.redirectToCheckout({
         sessionId: "<%= @session_id %>"
      });
   }); 
  }
  
</script>