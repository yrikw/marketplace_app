<p id="notice"><%= notice %></p>

<h3 class="hero-title text-center">Shop</h3>
<div class="search d-flex  justify-content-end">
      <form class="form-inline my-2 my-lg-12" action="<%= listings_path %>">
        <input class="form-control mr-sm-2" type="text" name="search" placeholder="Search">
        <button class="btn" type="submit">Search</button>
      </form>    
  </div><br>
    <% if @search_term %>
      <p>
        Found <%= pluralize(@listings.count, "listings") %> matching <em><%= @search_term %></em>
      </p>
　　 <% end %>


<div class="container">
   <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-4">
     <% @listings.each do |listing| %>
       <div class="col mb-4">
          <div class="card h-100">
           <% if listing.picture.attached? %>
                <%= image_tag listing.picture, class: "thumbnail card-img top" %>
           <% else %>
                <%= image_tag "noimage.jpg", alt: "noimage", class: "thumbnail card-img top" %>
           <% end %>
             <div class="card-body">
                <h5><%= listing.title %></h5>
                  <h5>$<%= listing.price %></h5>
                  <%= link_to "See More", listing_path(listing.id), class: "btn"%>
                 <p class="card-subtitle my-2 text-muted text-right"><%= time_ago_in_words(listing.created_at) %> ago</p>
             </div>
          </div>
       </div>
     <% end %>      
   </div>
</div>
